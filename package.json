{
    "name": "ts-template",
    "version": "0.0.1",
    "description": "Typescript Project starting template",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm-run-all clean build:*",
        "build:js": "npm run ts src/build.ts",
        "build:types": "tsc -p tsconfig-build.json --emitDeclarationOnly",
        "build:watch:js": "npm run ts src/build.ts -- --watch",
        "start": "npm-run-all build:watch:*",
        "test": "jest --watchAll",
        "lint": "eslint src/*",
        "ts": "node -r esbuild-register"
    },
    "author": "Kevin LaFlamme",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@types/jest": "^27.0.3",
        "@types/node": "^17.0.4",
        "@types/yargs": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "chokidar": "^3.5.3",
        "esbuild": "^0.14.14",
        "esbuild-register": "^3.3.2",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "globby": "^13.1.0",
        "jest": "^27.4.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.1",
        "typescript": "^4.5.3",
        "yargs": "^17.3.1"
    }
}
